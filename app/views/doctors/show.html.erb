<h1>Doctor's Show Page</h1>
<h3><%= @doctor.name %></h3>

<ul><% @doctor.appointments.each do |app| %>
        <li> Appointment Time: <%= app.appointment_datetime.strftime('%B %d, %G at %R') %>
         Patient: <%= link_to app.patient.name, patient_path(app.patient) %></li>
    <br />
    <% end %>
</ul>
